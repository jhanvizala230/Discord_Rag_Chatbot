# Chunking
CHUNK_SIZE=600
CHUNK_OVERLAP=200

# Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L12-v2
EMBEDDING_PROVIDER=sentence-transformers
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Retrieval
TOP_K=30
FINAL_K=15
SIMILARITY_THRESHOLD=0.65
RETRIEVAL_DISTANCE_THRESHOLD=0.6

# LLM (Docker defaults should use http://ollama:11434)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_URL=http://localhost:11434/api/generate
LLM_MODEL=qwen2.5:7b-instruct-q4_K_M
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1024
VISION_MODEL=qwen3-vl:4b

# Citation download links
DOCINTEL_API_BASE=http://localhost:8000
DOCUMENT_DOWNLOAD_BASE_URL=http://localhost:8000

# Image upload constraints
ALLOWED_IMAGE_EXTENSIONS=png,jpg,jpeg,bmp,gif,webp
MAX_IMAGE_UPLOAD_MB=8

# Drift detection
DRIFT_SIM_THRESHOLD=0.6

# Guardrails
ENABLE_GUARDRAILS=1
GUARDRAILS_ON_FAIL=fix

# LangSmith
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=

# Hugging Face Hub
HUGGINGFACE_HUB_TOKEN=
